<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
 .question
{
     
     float:left;
	width:70%;
	height:100px;
	background:black;
	color:white;
}

.question h2
{
    margin-top:30px;
	margin-left:250px;
	font-family:Times New Roman;
}

.button1
{
    width:30%;
     float:left;

	height:100px;
	background:black;
	color:white;
}
.button1 input[type="button"]
{
	 border-radius: 25px;
	width:200px;
	font-size:20px;
	height:50px;
    margin-top:20px;
    color:black;
     
}

footer
{
background:#404040;
}
.container
{
	
	width:90%;
	margin: 0 auto;
}
.Company
{

	float:left;
	width:25%;
	height:150px;
	
	
}
.Company h2
{
	color:White;
	text-align:center;
}
.clear
{
	clear:both;
}

.information
{
	width:100%;

}
.information ul
{
	margin:0px;
	padding:0px;
}


.information ul li
{
	list-style:none;
	color:white;
	text-align:center;
}

.information ul li img
{
margin-top:10px;

}

.information p
{
		color:white;
}

        </style>

</head>
<body>
    <div class="navbar navbar-inverse  navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-pills">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li class="nav-header">Nav header</li>
                            <li><a href="#">Separated link</a></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("History", "History", "Home")</li>
                    
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    
        <footer style="background-color:#404040;">
            <div class="question">
                <H2>Have You Some Question About Our Work? &nbsp;&nbsp;</H2>
            </div>
            <div class="button1"><input type="button" value="Asked About Us"></div>


            <div style="clear:both"></div>


            <div class="container">

                <div class="Company">

                    <h2>Who We Are</h2>
                    <div class="information">
                        <P>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean eget dui et mi pulvinar porttitor.
                            Morbi porttitor neque id luctus commodo.
                        </P>
                    </div>

                </div>

                <div class="Company">

                    <h2>Company</h2>
                    <div class="information">
                        <ul>
                            <li>About Us</li>
                            <li>Our Services</li>
                            <li>Contact</li>
                            <li>Blog</li>

                        </ul>
                    </div>
                </div>

                <div class="Company">

                    <h2>Contact Us</h2>
                    <div class="information">
                        <ul>
                            <li>Phone: +041-234567</li>
                            <li>Email : abc@gmail.com</li>

                            <li>
                                <a><img src="~/images/twitter.png" height="30"></a>
                                <a><img src="~/images/facebook.png" height="30"></a>
                                <a><img src="~/images/google_32.png" height="30"></a>
                            </li>

                        </ul>
                    </div>

                </div>


                <div class="Company">

                    <h2>Address</h2>
                    <div class="information">
                        <ul>
                            <li>Y Block Market</li>
                            <li>DHA Phase  3</li>
                            <li>Inner Circle</li>
                            <li>Shop No 51</li>

                        </ul>
                    </div>

                </div>

                <div style="clear:both"></div>


                <center><p>&copy; @DateTime.Now.Year - My ASP.NET Application</p></center>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
