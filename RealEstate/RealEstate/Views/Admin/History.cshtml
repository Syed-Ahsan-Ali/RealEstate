@{
    ViewBag.Title = "History";
}

<body style="background-color:ghostwhite;">
    <h2 style="font-family:'Century Gothic';color:dodgerblue;"><b>@Model.Title</b></h2>


    <div class="paragraphs">
        <div class="row">
            <div class="span4">
                <img style="float:right" src="@Url.Content(Model.Image)" />
                <div class="p--oversized padding-b25">
                    <p style="font-family:'Arial,sans-serif';font-size:larger;">@Model.Description </p>
                </div>
            </div>
        </div>
    </div>
    <!--Dialogue Box for Update History-->
    <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        Update History
    </button>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">Update History</h4>
                </div> <!-- /.modal-header -->
                <div class="modal-body">
                    <form role="form" action="/Home/UpdateHistoryPage/@Model.Id" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control" name="title" style="width:539px;margin-bottom:15px" value="@Model.Title">
                            </div>
                            <div class="input-group">
                                <textarea rows="8" name="description" style="width:539px">@Model.Description</textarea>
                            </div>
                            Upload Image : <input type="file" name="image" />
                        </div>
                        <div class="modal-footer">
                            <button class="form-control btn btn-primary" type="submit">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>